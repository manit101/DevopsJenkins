pipeline{
    agent any

    tools {
        maven 'maven'
    }

    stages{

        stage('Git checkout code'){
            steps{
                git url: 'https://github.com/manit101/DevopsWorkshopPractice.git', branch: 'main'
            }
        }

        stage('Build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
    }
}
