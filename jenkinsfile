pipeline{
    agent any

    tools {
        maven 'maven'
    }

    stages{

        stage('Build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Run JAr'){
            steps{
                def output = sh(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true).trim()

                echo "print output from JAR: ${output}"
            }
        }
    }
}
